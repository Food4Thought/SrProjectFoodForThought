<apex:page controller="myVOL_CTRL_VolunteersReportHours" language="{!strLanguage}" showheader="false" sidebar="false" standardStylesheets="false" cache="false">

    <apex:stylesheet value="{!strURLtoCSSFile}" /> 

    <apex:form styleClass="cssForm" id="formReportHours" >  
        <table columns="2" >
       <!-- ApexPages.currentPage().getParameters().get('myParamName') == ApexPages.currentPage().getParameters().get('myparamname'));-->
            <!--  NOTE: had to put rendered check on each element.  using a panel around the TR or TD's did not work! -->
            <!--  NOTE: all of these fields need to be filled in, but couldn't mark them required, or we couldn't use actionSupport with immediate=false. -->
            
            <!-- the fields we require for Contact matching (firstname, lastname, email) are already required in the fieldset -->
            <apex:repeat value="{!$ObjectType.Contact.FieldSets.GW_Volunteers__VolunteersReportHoursFS}" var="f" >
                <tr>
                    <td class="cssLabelsColumn" ><apex:outputLabel value="{!f.Label + IF(OR(f.DBRequired, f.Required), '*', '')}" /></td>
                    <td class="cssInputFieldsColumn" ><apex:inputField value="{!Contact[f]}" required="false"
                        styleClass="{!IF(f.Type == 'Long Text Area', 'cssInputFields cssTextArea', 'cssInputFields')}" /></td>
                </tr>
            </apex:repeat>        

            <tr>
                <td class="cssLabelsColumn"><apex:outputLabel rendered="{!hasVolunteerJobs}" value="{!$ObjectType.GW_Volunteers__Volunteer_Hours__c.Fields.GW_Volunteers__Volunteer_Job__c.Label + '*'}" /></td>
                <td class="cssInputFieldsColumn" >
                    <apex:outputText rendered="{!NOT(hasVolunteerJobs)}" value="There are no jobs available for you to report hours against." />
                    <apex:selectList rendered="{!hasVolunteerJobs}" value="{!volunteerJobId}" size="1" id="ddlVolunteerJobs">
                        <apex:actionSupport immediate="false" event="onchange" rerender="formReportHours" status="retrieveStatus" action="{!ChangeVolunteerJob}" />
                        <apex:selectOptions value="{!listSOVolunteerJobs}" /> 
                    </apex:selectList>&nbsp;&nbsp;  
                    <apex:actionStatus startText="Loading..." stopText=" " id="retrieveStatus" startStyle="color:green; font-style:italic" />
                </td>
            </tr>
            
            <tr>
                <td class="cssLabelsColumn">&nbsp;</td>
                <td class="cssInputFieldsColumn" ><p class="cssHelpNotes" >{!IF(hasShifts, "Select the Shift you worked, and update the number of hours you worked if needed.", IF(volunteerJobId != null, "Specify the time frame you are reporting on, and the total hours you worked.", '')) }</p></td> 
            </tr>   

            <tr>
                <td class="cssLabelsColumn" ><apex:outputLabel rendered="{true}" value="{!$ObjectType.GW_Volunteers__Volunteer_Hours__c.Fields.GW_Volunteers__Volunteer_Shift__c.Label + '*'}" /></td>
                <td class="cssInputFieldsColumn" >
                    <apex:selectList rendered="{!hasShifts}" value="{!volunteerShiftId}" size="1" id="ddlVolunteerShifts">
                        <apex:actionSupport immediate="false" event="onchange" rerender="formReportHours" status="retrieveStatus" action="{!ChangeVolunteerShift}" />
                        <apex:selectOptions value="{!listSOVolunteerShifts}" /> 
                    </apex:selectList>
                </td>
            </tr>
            
            <!-- have jobs listed but no shifts -->
           <tr>
                <td class="cssLabelsColumn" ><apex:outputLabel rendered="{!volunteerJobId != null && NOT(hasShifts)}" 
                    value="{!$ObjectType.GW_Volunteers__Volunteer_Hours__c.Fields.GW_Volunteers__Start_Date__c.Label + '*'}" /></td>
                <td class="cssInputFieldsColumn" ><apex:inputField rendered="{!volunteerJobId != null && NOT(hasShifts)}" 
                    value="{!vhours.GW_Volunteers__Start_Date__c}" required="false" styleClass="cssInputFields" /></td>
            </tr>

            <tr>
                <td class="cssLabelsColumn" ><apex:outputLabel rendered="{!volunteerJobId != null && NOT(hasShifts)}" 
                    value="{!$ObjectType.GW_Volunteers__Volunteer_Hours__c.Fields.GW_Volunteers__End_Date__c.Label + '*'}" /></td>
                <td class="cssInputFieldsColumn" ><apex:inputField rendered="{!volunteerJobId != null && NOT(hasShifts)}" 
                    value="{!vhours.GW_Volunteers__End_Date__c}" required="false" styleClass="cssInputFields" /></td>
            </tr>
            
            <tr>
                <!-- invisible field containing hours worked==3 --> 
                <td class="cssInputFieldsColumn" ><apex:inputHidden rendered="{!volunteerJobId != null && (NOT(hasShifts) || volunteerShiftId != null)}" 
                    value="{!vhours.GW_Volunteers__Hours_Worked__c}" required="false"  /></td>
            </tr>

            <!--Uncomment this when you need to display additional fields stored on the fieldset VolunteersReportHoursFS on the vol hours -->
          <!-- 
           <apex:repeat value="{!$ObjectType.GW_Volunteers__Volunteer_Hours__c.FieldSets.GW_Volunteers__VolunteersReportHoursFS}" var="f" >
                <tr>
                    <td class="cssLabelsColumn" >
                        <apex:outputLabel rendered="{!volunteerJobId != null && (NOT(hasShifts) || volunteerShiftId != null)}" 
                                value="{!f.Label + IF(OR(f.DBRequired, f.Required), '*', '')}" /> 
                    </td>
                    
                </tr>
            </apex:repeat>      
             -->

            <tr>
                <td></td>        
                <!-- Submit Button -->
                <td class="cssInputFieldsColumn" >
                    <apex:commandButton value="Check In" id="btnSave" 
                        disabled="{false}"
                        onclick="document.getElementById('{!$Component.btnSave}').disabled=true;DoSave();" rerender="formReportHours"/>
                    <apex:actionFunction name="DoSave" action="{!Save}" />         
                </td>
            </tr>   
            <tr>
                <td></td>
                <td class="cssInputFieldsColumn" ><apex:outputLabel value="{!strSaveResult}" /></td>
            </tr>   
        </table>
        <apex:Messages style="color:red;" />        
    </apex:form>
</apex:page>